@model IEnumerable<FindAFriend.Models.Friends>
@using Microsoft.AspNetCore.Identity;

@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <thead>
        <tr>
            <th>
                Dina Vänner
            </th>
          <!----  <th>
                @Html.DisplayNameFor(model => model.FriendWith)
            </th>-->
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            @{ if (User.Identity.Name == item.User)
                {
                    item.User = item.FriendWith;
                }
            }
            <td>
                @Html.DisplayFor(modelItem => item.User)
            </td>
            <!----<td>
                @Html.DisplayFor(modelItem => item.FriendWith)
            </td>-->
            <td>
                <a asp-controller="Profiles" asp-action="FriendDetails" asp-route-id="@item.User">Se Profil</a> |
                <a asp-action="Delete" asp-route-id="@item.FriendshipID">Ta bort vän</a>
            </td>
                    
                
        </tr>
}
    </tbody>
</table>
