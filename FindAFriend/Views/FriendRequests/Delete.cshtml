@using FindAFriend.Controllers;
@model FindAFriend.Models.FriendRequests

@{
    ViewData["Title"] = "Delete";
}

<h3>Är du säker på att ni inte ska bli kompisar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Avsändare: @FriendRequestsController.TargetProfile.Name
        </dt>
        <dd class = "col-sm-10">
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="RequestID" />
        <input type="submit" value="Avböj" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka till vänförfrågningar</a>
    </form>
</div>
