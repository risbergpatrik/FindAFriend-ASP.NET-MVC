@using FindAFriend.Controllers;

@model FindAFriend.Models.FriendRequests

@{
    ViewData["Title"] = "Create";
}

<h4>Skicka Vänförfrågan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <!----<label asp-for="Sender" class="control-label"></label>-->
                <input type ="hidden" asp-for="Sender" class="form-control" />
                <span asp-validation-for="Sender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipient" class="control-label">Vill du skicka en vänförfrågan till @FriendRequestsController.TargetProfile.Name </label>
                <input type="hidden" asp-for="Recipient" class="form-control" />
                <span asp-validation-for="Recipient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Skicka" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
