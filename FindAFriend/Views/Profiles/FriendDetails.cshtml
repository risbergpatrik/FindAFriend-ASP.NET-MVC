@model FindAFriend.Models.Profile

@{
    ViewData["Title"] = "Details";
}
<div>
    <img src="@("~/Images/" + Model.UserID + ViewBag.Extension)" asp-append-version="true" width="250px" height="250px" style="border-radius : 50%; object-fit: cover" />
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserID)
        </dd>
    </dl>
    <form>
        <div>
            <div class="form-group">
                <input id="meddelandeText" type="text">
            </div>
            <input id="send" type="submit" value="Skicka Meddelande" class="btn btn-primary" />
        </div>
        <div id="meddelanden">
           
        </div>
    </form>
</div>
@section Scripts {

    <script>
        $(() =>
            $(document).ready((e) => {

             $.ajax({
                 url: "/api/MessagesApi/loadmessages",
                 type: "GET",
                 data: { ProfileUser: "@Model.UserID" },
                 contentType: "application/json; charset=utf-8",
                 dataType: "json",
                 success: function (data) {
                     console.log(data);
                     var meddelandeDiv = $("#meddelanden");
                     var jsonString = JSON.stringify(data);
                     var jsonObjects = JSON.parse(jsonString)

                     for (var i = 0; i < jsonObjects.length; i++) {
                         var obj = jsonObjects[i];
                         
                         var element = '<p>' + obj["text"] + ' : ' + obj["sender"] + ' : ' + obj["timeSent"] + '</p>';
                         meddelandeDiv.append(element);  
                     }
                },
                error: function (error) {
                    console.log(`Error ${error}`);
                }
            });
         })
      );
    </script>

    <script>
      $(() =>
          $("#send").click((e) => {
             e.preventDefault();

            $.ajax({
                url: "/api/MessagesApi/postmessage",
                type: "POST",
                data: JSON.stringify({
                Text: $("#meddelandeText").val(), Recipient: "@Model.UserID" }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: alert("Meddelandet har skickats! Ladda om sidan!")
            });
         })
      );
    </script>
<partial name="_ValidationScriptsPartial" />
}
